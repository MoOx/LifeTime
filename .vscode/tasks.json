{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "eslint-rescript",
        "detail": "Eslint ReScript generated JavaScript file",
        "type": "shell",
        "command": "eslint",
        "args": [
            "${fileDirname}/${fileBasenameNoExtension}.bs.js"
        ],
        "problemMatcher": ["$eslint-stylish"],
        "presentation": {
          "reveal": "never"
        }
      }
    ]
  }
