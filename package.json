{
  "private": true,
  "name": "lifetime-app",
  "version": "1.0.0",
  "scripts": {
    "ruby:bundle": "bundle install",
    "cocoapods:install": "cd ios && bundle exec pod install --repo-update",
    "svg:cleanup": "trash src/SVGs/components",
    "svg:convert": "react-from-svg src/SVGs src/SVGs/components --with-native-for-reason --remove-fill",
    "svg:format": "find src/SVGs/components -name \"*.re\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "svg": "yarn svg:cleanup && yarn svg:convert && yarn svg:format",
    "bs:clean": "bsb -make-world -clean-world",
    "bs:build": "bsb -make-world",
    "md:to-json": "markdown-to-json src/md/*.md",
    "prepare": "patch-package && yarn ruby:bundle && yarn cocoapods:install && yarn svg && yarn md:to-json && yarn bs:clean && yarn bs:build",
    "start": "react-native start",
    "start:android": "react-native run-android",
    "start:ios": "react-native run-ios --simulator=\"iPhone 11\"",
    "start:web": "react-scripts start",
    "build:web": "react-scripts build",
    "test:native": "jest",
    "test:web": "react-scripts test",
    "lint": "eslint --ignore-path .gitignore .",
    "test:bundle:ios": "react-native bundle --platform ios --dev false --minify false --entry-file index.js --bundle-output index.bundle.js && rm index.bundle.js",
    "test:bundle:android": "react-native bundle --platform android --dev false --minify false --entry-file index.js --bundle-output index.bundle.js && rm index.bundle.js",
    "test:bundle": "yarn test:bundle:ios && yarn test:bundle:android",
    "test": "yarn lint && yarn bs:clean && yarn test:native && yarn test:bundle",
    "release:bump:patch": "yarn version --patch --no-git-tag-version && bundle exec fastlane versionBump",
    "release:bump:minor": "yarn version --minor --no-git-tag-version && bundle exec fastlane versionBump",
    "release:bump:major": "yarn version --major --no-git-tag-version && bundle exec fastlane versionBump",
    "release:tag": "VERSION=`node -e \"console.log(require('./package.json').version)\"`; git commit --all -m $VERSION; git tag -am $VERSION v$VERSION"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^2.6.0",
    "@glennsl/bs-json": "^5.0.1",
    "@react-native-community/async-storage": "^1.7.1",
    "@react-native-community/blur": "^3.4.1",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-native-community/push-notification-ios": "^1.7.0",
    "@react-native-community/slider": "^2.0.0",
    "@react-navigation/bottom-tabs": "^5.11.0",
    "@react-navigation/native": "^5.8.0",
    "@react-navigation/stack": "^5.12.0",
    "@reason-react-native/async-storage": "^1.6.0",
    "@reason-react-native/permissions": "^2.2.0",
    "@reason-react-native/push-notification-ios": "^1.7.0",
    "@reason-react-native/safe-area-context": "^3.1.0",
    "@reason-react-native/slider": "^3.0.0-0.63",
    "@reason-react-native/svg": "^12.1.4-0.63",
    "@sentry/react-native": "^1.6.2",
    "bs-tinycolor": "^2.0.1",
    "date-fns": "^2.8.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-multiversal": "https://github.com/MoOx/react-multiversal#bf0f30f",
    "react-native": "^0.63.0",
    "react-native-bootsplash": "^2.0.0",
    "react-native-calendar-events": "^2.0.0",
    "react-native-dark-mode": "^0.2.1",
    "react-native-gesture-handler": "^1.8.0",
    "react-native-localize": "^1.4.0",
    "react-native-permissions": "^2.2.0",
    "react-native-push-notification": "^6.0.0",
    "react-native-reanimated": "^1.13.0",
    "react-native-redash": "^9.6.0",
    "react-native-safe-area-context": "^3.1.0",
    "react-native-screens": "^2.15.0",
    "react-native-svg": "^12.0.0",
    "react-native-web": "^0.12.0",
    "reason-date-fns": "^0.10.4",
    "reason-future": "^2.6.0",
    "reason-react": "^0.9.0",
    "reason-react-native": "^0.63.2",
    "reason-react-navigation": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "babel-jest": "^25.1.0",
    "bs-platform": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.10.0",
    "flow-bin": "^0.122.0",
    "jest": "^25.1.0",
    "jetifier": "^1.6.0",
    "markdown-to-json": "https://github.com/MoOx/markdown-to-json",
    "metro-react-native-babel-preset": "^0.59.0",
    "patch-package": "^6.2.0",
    "react-from-svg": "^4.0.2",
    "react-scripts": "3.2.0",
    "react-test-renderer": "^16.13.0",
    "trash-cli": "^3.0.0"
  },
  "jest": {
    "preset": "react-native",
    "testRegex": "Test\\.js$",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-(native|universal|navigation)-(.*)|@react-native-community/(.*)|@react-navigation/(.*)|bs-platform|(@[a-zA-Z]+/)?(bs|reason|rescript)-(.*)+)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
