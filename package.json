{
  "private": true,
  "name": "lifetime-app",
  "version": "1.0.0",
  "scripts": {
    "format": "npm run format:most && npm run format:res",
    "format:most": "prettier --write \"**/*.{js,json,css,md}\" \"!package.json\"",
    "format:res": "rescript format -all",
    "ruby:bundle": "bundle install",
    "dependencies:ios:install": "cd ios && bundle exec pod install --repo-update",
    "dependencies:android:install": "cd android && ./gradlew dependencies && ./gradlew app:dependencies",
    "dependencies:android:update": "cd android && ./gradlew dependencies --write-locks && ./gradlew app:dependencies --write-locks",
    "svg:cleanup": "trash src/SVGs/components",
    "svg:convert": "react-from-svg src/SVGs src/SVGs/components --with-native-for-rescript --remove-fill",
    "svg": "yarn svg:cleanup && yarn svg:convert",
    "res:clean": "rescript clean",
    "res:build": "rescript build",
    "md:to-json": "markdown-to-json src/md/*.md",
    "prepare": "patch-package && yarn ruby:bundle && yarn dependencies:ios:install && yarn dependencies:android:install && yarn svg && yarn md:to-json && yarn res:clean && yarn res:build",
    "start": "react-native start",
    "start:android": "react-native run-android",
    "start:ios": "react-native run-ios --simulator=\"iPhone 11\"",
    "start:web": "react-scripts start",
    "build:android": "react-native run-android --variant=release",
    "build:ios": "react-native run-ios --configuration Release",
    "lint": "eslint src tests",
    "test:native": "jest",
    "test:build": "yarn build:ios && yarn build:android",
    "test": "yarn lint && yarn res:clean && yarn res:build && yarn test:native && yarn test:build",
    "release:bump:patch": "yarn version --patch --no-git-tag-version && bundle exec fastlane versionBump",
    "release:bump:minor": "yarn version --minor --no-git-tag-version && bundle exec fastlane versionBump",
    "release:bump:major": "yarn version --major --no-git-tag-version && bundle exec fastlane versionBump",
    "release:tag": "VERSION=`node -e \"console.log(require('./package.json').version)\"`; git commit --all -m $VERSION; git tag -am $VERSION v$VERSION"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^2.6.0",
    "@glennsl/bs-json": "^5.0.1",
    "@react-native-async-storage/async-storage": "^1.15.5",
    "@react-native-community/blur": "^3.4.1",
    "@react-native-community/datetimepicker": "^3.5.0",
    "@react-native-community/push-notification-ios": "^1.8.0",
    "@react-native-community/slider": "^3.0.0",
    "@react-native-masked-view/masked-view": "^0.2.2",
    "@react-navigation/bottom-tabs": "^5.11.7",
    "@react-navigation/native": "^5.9.2",
    "@react-navigation/stack": "^5.14.2",
    "@rescript-react-native/async-storage": "^1.6.3",
    "@rescript-react-native/datetimepicker": "^3.0.3",
    "@rescript-react-native/permissions": "^2.2.2",
    "@rescript-react-native/push-notification-ios": "^1.7.3",
    "@rescript-react-native/safe-area-context": "^3.1.2",
    "@rescript-react-native/slider": "^3.0.2",
    "@rescript-react-native/svg": "^12.1.7",
    "@rescript/react": "^0.10.0",
    "@sentry/react-native": "^2.5.2",
    "bs-tinycolor": "^2.0.1",
    "date-fns": "^2.16.0",
    "fbemitter": "^3.0.0",
    "react-dom": "^17.0.1",
    "react-multiversal": "https://github.com/MoOx/react-multiversal#5efbecf",
    "react-native-bootsplash": "^3.1.0",
    "react-native-calendar-events": "^2.2.0",
    "react-native-gesture-handler": "^1.8.0",
    "react-native-localize": "^1.4.0",
    "react-native-permissions": "^2.2.0",
    "react-native-push-notification": "^7.0.0",
    "react-native-reanimated": "^1.13.0",
    "react-native-safe-area-context": "^3.1.0",
    "react-native-screens": "https://github.com/software-mansion/react-native-screens#b00a488",
    "react-native-svg": "^12.0.0",
    "react-native-transparent-status-and-navigation-bar": "^1.0.1",
    "react-native-web": "^0.12.0",
    "react-native": "^0.64.1",
    "react": "^17.0.1",
    "rescript-future": "^1.1.1",
    "rescript-react-native": "^0.64.3",
    "rescript-react-navigation": "^5.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@moox/markdown-to-json": "^1.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "eslint": "7.14.0",
    "eslint-config-prettier": "^6.10.0",
    "flow-bin": "^0.122.0",
    "jest": "^26.6.3",
    "jetifier": "^1.6.0",
    "lint-staged": "^11.0.0",
    "metro-react-native-babel-preset": "^0.64.0",
    "patch-package": "^6.2.0",
    "react-from-svg": "^5.0.2",
    "react-scripts": "3.2.0",
    "react-test-renderer": "^17.0.1",
    "rescript": "^9.1.0",
    "simple-git-hooks": "^2.4.1",
    "trash-cli": "^3.0.0"
  },
  "lint-staged": {
    "*.{md,json,js,css}": "prettier --write",
    "*.{res,resi}": "rescript format"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "jest": {
    "preset": "react-native",
    "testRegex": "Test\\.js$",
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-|@)?react-(native|universal|navigation)(.+)?|(@[a-zA-Z]+/)?(bs|reason|rescript?)?(-(.*)+)?|rescript)"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
